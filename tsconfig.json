{
  "exclude": ["test", "lib"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es5", "es2015", "es2016", "es2017", "esnext"],
    "strict": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "downlevelIteration": true
  }
}
